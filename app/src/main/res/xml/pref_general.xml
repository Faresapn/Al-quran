<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:dialogTitle="Pilih ukuran"
        android:entries="@array/arab_font_size_titles"
        android:entryValues="@array/arab_font_size_values"
        android:defaultValue="24"
        android:key="@string/key_arab_font_size"
        android:title="Ukuran Font Arabic"  />

    <ListPreference
        android:dialogTitle="Pilih ukuran"
        android:entries="@array/translation_font_size_titles"
        android:entryValues="@array/translation_font_size_values"
        android:defaultValue="18"
        android:key="@string/key_translation_font_size"
        android:title="Ukuran Font Terjemahan"  />

</PreferenceScreen>
